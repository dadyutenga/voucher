# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/wifi_voucher_db

# Email/SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SENDER_EMAIL=your-email@gmail.com

# M-Pesa Payment Configuration
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_SHORTCODE=your_business_shortcode
MPESA_PASSKEY=your_mpesa_passkey
MPESA_CALLBACK_URL=https://yourdomain.com/payment/mpesa/callback

# General Payment Configuration
DEFAULT_CURRENCY=KES

# Application Configuration
SECRET_KEY=your-super-secret-key-here-change-in-production
ENVIRONMENT=development
DEBUG=true

# Meraki Configuration (Optional)
MERAKI_API_KEY=your_meraki_api_key
MERAKI_BASE_GRANT_URL=https://your-meraki-controller.com/guest/s/default/
MERAKI_NETWORK_ID=your_network_id

# Additional Payment Gateways (Optional - for future expansion)
# PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_client_secret
# STRIPE_API_KEY=sk_test_your_stripe_key (if adding Stripe later)

# Redis Configuration (Optional - for session management)
REDIS_URL=redis://localhost:6379/0

# Security
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
DEMO_VOUCHER_RATE_LIMIT=3
DEMO_VOUCHER_RATE_WINDOW=3600
